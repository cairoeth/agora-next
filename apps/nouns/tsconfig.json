{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "paths": {
    "@/*": ["./*"],
    "@lib/*": ["lib/*"],
    "@assets/*": ["assets/*"],
    "@config/*": ["config/*"],
    "@components/*": ["components/*"],
    "@utils/*": ["utils/*"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
